pipeline {
    agent any

    stages {

        stage('checkout') {
            steps {
                deleteDir()
                checkout scm
            }
        }
        
        stage('run shell') {
            steps {
                dir("pipeline") {
                    sh "chmod u+x shell.sh"
                    sh "./shell.sh" 
                }
            }   
        }
    }

    post {
        failure {
            sh '''
            #!/bin/bash
            ID=$(cat pipeline/env.txt)
            echo $ID            
            '''
        }
    }
}
